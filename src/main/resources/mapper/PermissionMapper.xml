<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simple.modules.permission.mapper.PermissionMapper">

    <select id="selectPermissionCodesByRoleIds" resultType="java.lang.String">
        SELECT DISTINCT
        p.code
        FROM
        sys_permission p
        INNER JOIN
        sys_role_permission rp ON p.id = rp.permission_id
        WHERE
        p.code IS NOT NULL AND p.code != ''
        AND rp.role_id IN
        <foreach item="roleId" collection="roleIds" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>

</mapper>